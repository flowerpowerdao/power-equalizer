{
  "version": 1,
  "canisters": {
    "main": {
      "type": "motoko",
      "main": "src/main.mo",
      "declarations": {
        "output": "declarations/main"
      },
      "dependencies": [
        "ledger"
      ]
    },
    "ledger": {
      "type": "custom",
      "wasm": "declarations/ledger/ledger.wasm",
      "candid": "declarations/ledger/ledger.public.did",
      "remote": {
        "candid": "declarations/ledger/ledger.public.did",
        "id": {
          "ic": "ryjl3-tyaaa-aaaaa-aaaba-cai"
        }
      }
    },
    "assets": {
      "type": "assets",
      "source": [
        "assets/"
      ]
    },
    "test": {
      "type": "custom",
      "wasm": ".dfx/local/canisters/main/main.wasm",
      "candid": ".dfx/local/canisters/main/main.did"
    }
  },
  "defaults": {
    "build": {
      "packtool": "vessel sources",
      "args": "--trap-on-call-error"
    }
  },
  "networks": {
    "ic": {
      "type": "persistent",
      "providers": [
        "https://icp0.io"
      ]
    },
    "staging": {
      "type": "persistent",
      "providers": [
        "https://icp0.io"
      ]
    }
  }
}
